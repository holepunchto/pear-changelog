    "type": "git",
    "url": "git+https://github.com/holepunchto/pear-changelog.git"
  },
  "author": "Holepunch",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/holepunchto/pear-changelog/issues"
  },
  "homepage": "https://github.com/holepunchto/pear-changelog#readme",
  "devDependencies": {
    "brittle": "^3.18.3",
    "lunte": "^1.0.0",
    "prettier": "^3.6.2",
    "prettier-config-holepunch": "^2.0.0"
  },
  "dependencies": {
    "b4a": "^1.6.4"
  }
}
